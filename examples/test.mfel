def bindings(mod) {
    let arr := @array(mod);
    if @type(arr) == "Error" {
        @print(mod)
    } else {
        @print("{ ");
        for binding in @array(mod) {
            let var := binding(0);
            let val := binding(1);
            @print(var, "=");
            bindings(val);
            @print(" ");
        }
        @print("} ");
    }
}

